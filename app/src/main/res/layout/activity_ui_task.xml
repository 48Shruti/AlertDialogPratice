<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UiTask">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/bluebackground"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="140dp"
        app:cardBackgroundColor="@drawable/yellowbackground"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="220dp"
        android:id="@+id/cvmarkattendance"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/yellowbackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/baseline_calendar_today_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark"
                android:textSize="17dp"
                android:layout_marginTop="90dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="17dp"
                android:layout_marginTop="110dp"
                android:layout_marginStart="14dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginTop="220dp"
        android:layout_marginStart="130dp"
        android:id="@+id/cvAttendance"
        android:layout_alignStart="@id/cvmarkattendance"
        app:cardBackgroundColor="@drawable/pinkbackground"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pinkbackground">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/img_1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show"
                    android:textSize="17dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:textSize="17dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@id/cvAttendance"
        android:id="@+id/cvhomework"
        android:layout_marginTop="220dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lightbluebackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/img_2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="17dp"
                android:layout_marginTop="90dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work"
                android:textSize="17dp"
                android:layout_marginTop="110dp"
                android:layout_marginStart="39dp"
                android:textColor="@color/white"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBE0E0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textSize="25dp"
            android:textColor="#E91E63"
            android:layout_marginTop="17dp"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_3" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D1F6A5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice"
                android:textSize="25dp"
                android:textColor="#26B62C"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_4" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C3E3FB">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Fee"
                android:textSize="25dp"
                android:textColor="#0F71BF"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_5" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1FAA0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="25dp"
                android:textColor="#FF9800"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_6" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>